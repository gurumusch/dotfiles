;--------------------
; colors
;--------------------
[colors]
   background = #55000000
   foreground = #ffffff
   foreground-inactive = #888888
   foreground-alt = #555
   primary = #ffb52a
   secondary = #e60053
   alert = #bd2c40
   separator = #cccc00
   underline = #cc6600

;--------------------
; my top bar
;--------------------
[bar/topbar]
   width=100%
   foreground = ${colors.foreground}
   background=#88000000
   underline-size = 3
   underline-color = ${colors.underline}
   spacing = 0
   line-height = 2
   padding = 0
   module-margin = 2
   ; fonts
   font-0 = "Inconsolata for Powerline:size=12"
   font-1 = "FontAwesome:size=12"
   font-2 = "Tamsyn:pixelsize=12;0"
   font-3 = "Roboto:size=11:weight=bold;2"
   font-4 = "Noto Sans:size=11;1"
   ; modules
   modules-left = i3
   modules-center = battery0 battery1 backlight wireless-network temperature cpu memory volume
   modules-right = date powermenu

;--------------------
; i3 integration
;--------------------
[module/i3]
   type = internal/i3
   format = <label-state> <label-mode>
   index-sort = true
   wrapping-scroll = true
   strip-wsnumbers = true
   pin-workspaces = true
   label-mode-padding = 5
   label-mode-foreground = #ffffff
   ; unfocused - Inactive workspace in any monitor
   label-unfocused-foreground = #888888
   label-unfocused-padding = 1
   ; visible - active workspace in any monitor
   label-visible-foregroud = #888888
   label-visible-padding = 1
   ; focused - active workspace on focused monitor
   label-focused-foreground = ${colors.foreground}
   label-focused-padding = 1
   label-focused-underline = ${colors.underline}
   ; urgent - workspace with urgency hint set
   label-urgent-padding = 1
   label-urgent-foreground = #ff0000
   label-urgent-underline = #ff0000

;--------------------
; date module
;--------------------
[module/date]
   type = internal/date
   interval = 5
   format-underline = ${colors.underline}
   date = "%d.%m.%y"
;   date-alt = " %d"
   time = " %H:%M"
;   time-alt =  %H:%M
;   label = %date% %time%
   format = " <label>"
   label = %time%

;--------------------
; volume integration
;--------------------
[module/volume]
   type = internal/volume
   format-volume-underline = ${colors.underline}
   format-volume = "<ramp-volume> <label-volume> <bar-volume>"
   label-volume = "%percentage% %"
   label-volume-foreground = ${root.foreground}
   format-muted = " stumm <bar-volume>"
   label-muted = ""
   ramp-volume-0 = ""
   ramp-volume-1 = ""
   ramp-volume-2 = ""
   bar-volume-width = 10
   bar-volume-foreground-0 = #55aa55
   bar-volume-foreground-1 = #55aa55
   bar-volume-foreground-2 = #55aa55
   bar-volume-foreground-3 = #55aa55
   bar-volume-foreground-4 = #55aa55
   bar-volume-foreground-5 = #f5a70a
   bar-volume-foreground-6 = #ff5555
   bar-volume-gradient = false
   bar-volume-indicator = │
   bar-volume-indicator-font = 2
   bar-volume-indicator-foreground = #ff
   bar-volume-fill = ─
   bar-volume-fill-font = 2
   bar-volume-empty = ─
